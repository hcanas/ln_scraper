{
    "compilerOptions": {
        "target": "ES2020",         // Target modern JavaScript for better performance
        "module": "commonjs",       // Use CommonJS for Node.js
        "esModuleInterop": true,    // Allow default imports from CommonJS modules
        "strict": true,             // Enable strict type checking
        "resolveJsonModule": true,  // Allow importing JSON files as modules
        "skipLibCheck": true,       // Skip checking of declaration files (for faster compilation)
        "lib": ["es2020", "dom"]    // Include 'dom' for browser context (e.g., Playwright)
    },
    "include": [
        "src/**/*.ts",              // Include TypeScript files in the src directory
        "types/*.d.ts"              // Include type definitions
    ],
    "exclude": [
        "node_modules"              // Exclude node_modules from compilation
    ]
}
  